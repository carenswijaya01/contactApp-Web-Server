<%- include('layouts/header') %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h1>Form Ubah Data Kontak</h1>
      <form action="/update-contact" method="post">
        <% if(typeof msg != 'undefined' && msg.length !==0){ %>
        <div class="alert alert-danger"><%= msg %></div>
        <% } %>
        <div class="form-group">
          <input
            type="hidden"
            name="nama_lama"
            id="nama_lama"
            value="<%= data.nama %>"
          />
          <label for="nama">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= data.nama %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="noHP">No HP</label>
          <input
            type="text"
            class="form-control"
            id="noHP"
            name="noHP"
            value="<%= data.noHP %>"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= data.email %>"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Simpan Perubahan</button>
      </form>
    </div>
  </div>
</div>
<%- include('layouts/footer') %>

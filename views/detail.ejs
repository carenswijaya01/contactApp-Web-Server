<%- include('layouts/header') %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= data.nama %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= data.noHP %></h6>
          <p class="card-text"><%= data.email %></p>
          <a href="/contact/edit/<%= data.nama %>" class="btn btn-primary badge"
            >Edit</a
          >
          <a
            href="/contact/delete/<%= data.nama %>"
            class="btn btn-danger badge"
            onclick="return confirm('Yakin mau hapus kontak ini?')"
            >Hapus</a
          >
          <a href="/contacts" class="card-link d-block mt-3"
            >&laquo;Kembali ke daftar kontak</a
          >
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('layouts/footer') %>

<%- include('layouts/header') %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h1>Form Tambah Data Kontak</h1>
      <form action="/save-contact" method="post">
        <% if(typeof msg != 'undefined'){ %>
        <div class="alert alert-danger"><%= msg.msg %></div>
        <% } %>
        <div class="form-group">
          <label for="nama">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
          />
        </div>
        <div class="form-group">
          <label for="noHP">No HP</label>
          <input
            type="text"
            class="form-control"
            id="noHP"
            name="noHP"
            required
          />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">
          Tambah Data Kontak
        </button>
      </form>
    </div>
  </div>
</div>
<%- include('layouts/footer') %>
